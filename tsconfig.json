{
	"compilerOptions": {
		// General
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"useDefineForClassFields": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
			"webpack-env",
			"jest"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable",
			"ScriptHost"
		],
		// Per-project
		"target": "ES2020",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}
